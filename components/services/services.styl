@require 'util'

.services
  background-image url('/images/bg-services.jpg')
  background-size cover
  color white

.services_heading
  text-align center
  overflow auto // bug fix
  h2
    padding-top 2em

.services_content
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content center
  align-items flex-start
  align-content center
  max-width 960px
  padding-left 1em
  padding-right 1em
  padding-bottom 2em
  article
    padding 0 1.5em
    order 1
    width 260px
    p
      text-align justify
      font-size 1.2em
    header
      text-align center

+media-query(all, min-width 30.063em, max-width 40em)
  .services_content
    margin 0 2em
    article
      width 290px

+media-query(all, min-width 40em, max-width 50em)
  .services_content
    margin 0 4em
    article
      width 290px

+media-query(all, min-width 50em)
  .services_content
    margin 0 auto
    article
      width 290px

+media-query(all, max-width 30.063em)
  .services_content
    flex-direction column
    align-items center
    article
      width 290px
