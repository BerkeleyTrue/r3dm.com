ease-out-trans = cubic-bezier(0.23, 1, 0.32, 1)

.SideNav
  height 100vh
  position fixed
  width 30vw
  background-color white
  z-index 21
  right 0
  top 0
  transition all 450ms ease-out-trans

  ul
    list-style-type none
    padding 0
    li
      padding-right 2em
      padding-left 2em
      height 3em
  a
    color black
    display block

.SideNav-close
  transform translateX(100%)

.SideNav_overlay
  background-color rgba(0, 0, 0, 0)
  height 100%
  right -100%
  position fixed
  top 0
  transition right 0ms cubic-bezier(0.23, 1, 0.32, 1) 400ms,
    background-color 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  width 100%
  z-index 20

  &.SideNav_overlay-show
    right 0px
    background-color rgba(0, 0, 0, 0.54)
    transition right 0ms cubic-bezier(0.23, 1, 0.32, 1) 0ms,
      background-color 400ms ease-out-trans 0ms
