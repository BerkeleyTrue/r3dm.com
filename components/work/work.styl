@require 'util'

.work
  background-color $gray
  color white
  //retina-image '../images/subtle_carbon.png'

.work_heading
  text-align center
  overflow auto // bug fix

.work_content
  gs('fluid')
  height 75%

  article
    row()
    display inline-block
    padding-bottom 3em

    .work_copy
      col(6)
      text-align left
      header
        text-align center
      >p
        padding 40px
        padding-top 5px
    .work_img
      col(6)
      div.pending
        text-align center
        height 20em
        &:before //vertical center
          content ''
          display inline-block
          height 100%
          vertical-align middle
      img
        display block
        margin 0 auto
        height 20em
        max-width 100%
