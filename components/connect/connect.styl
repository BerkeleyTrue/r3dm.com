@require 'util'
buttonHeight = 2.1rem

.connect
  gs('fluid')
  background-color lightBlue

.connect_heading
  row()
  color white
  text-align center
  overflow auto
  span.threes
    color $r3d

.connect_form
  .connect_name
    row()
    &:first-child
      col(6)
      margin-bottom 1em
      offset(3)
      input
        height buttonHeight
        width 100%
  .connect_email
    row()
    div:first-child
      col(4)
      margin-bottom 1em
      margin-right 0
      offset(3)
      input
        height buttonHeight
        width 100%
    div:last-child
      col(2.1) //HACK to compensate for margin removal on input and button
      border-bottom-right-radius 3px
      border-top-right-radius 3px
      margin-bottom 1em
      margin-left 0
      span
        border-left none
        cursor pointer
        display block
        font-size 1rem
        height buttonHeight
        line-height buttonHeight
        position relative
        padding-top 0
        padding-bottom 0
        text-align center
        width 100%
        &:hover
          background-color darken($r3d, 20%)
  button
    color white
    background-color $r3d
    border-radius 0 4px 4px 0
    padding-left 0
  span
    background-color $r3d
    border-left none

input[type = 'email'].connect_input
  margin-right 0
  border-radius 4px 0 0 4px

.connect-enter
  opacity 0.01
  transition opacity .5s ease-in

  &.connect-enter-active
    opacity: 1;
